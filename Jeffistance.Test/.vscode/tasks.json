{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Jeffistance.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/bin/Debug/netcoreapp3.1/Jeffistance.Test.dll"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": ["build tests"]
        }
    ]
}
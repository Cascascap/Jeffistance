<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jeffistance.Views.LobbyView">
  <Grid ColumnDefinitions="9*,1*" RowDefinitions="10*" Margin="4">
    <Grid ColumnDefinitions="10*" RowDefinitions="10*,1*" Margin="4">
      <Button Grid.Row="1" Grid.Column="0" Content="Kick Everyone" Command="{Binding OnKickEveryoneClicked}"
              IsVisible="{Binding ShowKickButton}"/>
    </Grid>
    <ListBox Grid.Row="0" Grid.Column="1" Items="{Binding Users}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>

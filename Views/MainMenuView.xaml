<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Jeffistance.Views.MainMenuView">

  <DockPanel>
    <TextBlock DockPanel.Dock="Top" Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Button Command="{Binding OnHostButtonClick}"
            Content="Host"
            Height="400"
            DockPanel.Dock="Bottom"/>
    <Button Command="{Binding OnJoinButtonClick}"
            Content="Join"
            DockPanel.Dock="Bottom"/>
  </DockPanel>

</UserControl>
